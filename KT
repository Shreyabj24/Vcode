package com.example.implicit

import android.content.Intent
import android.net.Uri
import android.os.Bundle
import android.widget.Button
import androidx.activity.enableEdgeToEdge
import androidx.appcompat.app.AppCompatActivity
import androidx.core.view.ViewCompat
import androidx.core.view.WindowInsetsCompat
import com.example.implicit.R

class MainActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        enableEdgeToEdge()
        setContentView(R.layout.activity_main)
        ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main)) { v, insets ->
            val systemBars = insets.getInsets(WindowInsetsCompat.Type.systemBars())
            v.setPadding(systemBars.left, systemBars.top, systemBars.right, systemBars.bottom)
            insets
        }
        val locationButton=findViewById<Button>(R.id.location)
        val callButton=findViewById<Button>(R.id.call)
        val aboutButton=findViewById<Button>(R.id.about)
        locationButton.setOnClickListener {

            val gmmIntentUri = Uri.parse("geo:0,0?q=Vidyavardaka+College+of+Engineering")
            val mapIntent   = Intent(Intent.ACTION_VIEW, gmmIntentUri)

            startActivity(mapIntent)
        }


        callButton.setOnClickListener {
            // Open dialer with a phone number
            val phoneNumber = "tel:1234567890"
            val callIntent = Intent(Intent.ACTION_DIAL, Uri.parse(phoneNumber))
            startActivity(callIntent)
        }

        aboutButton.setOnClickListener {
            // Open a webpage in Chrome
            val url = "https://vvce.ac.in/"
            val browserIntent = Intent(Intent.ACTION_VIEW, Uri.parse(url))
            startActivity(browserIntent)
        }
    }}
